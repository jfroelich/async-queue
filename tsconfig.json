{
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "allowJs": false,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "watch": true,
    "pretty": false,
    "strict": true,
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "noEmit": false
  }
}
